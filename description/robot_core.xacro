<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>
    </material>

    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1.0 1.0"/>
    </material>

    <material name="orange">
        <color rgba="1.0 0.3 0.1 1.0"/>
    </material>

    <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
    </material>

    <!-- Base Link -->

    <link name="base_link">

    </link>
    
    <!-- Chassis Joint / Link -->
    
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0.0 0.0"/>
    </joint>

    <link name="chassis">
        <visual>
            <!-- normally origin is in the center of the box but we shift the origin. » should look into this more  -->
            <origin xyz="0.15 0.0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <!-- collision is same with visual just no material -->
            <origin xyz="0.15 0.0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>
            Gazebo/Orange
        </material>
    </gazebo>

    <!-- Left Wheel Link > lengths are in meters! -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
    <!-- default cylinders are oriented in z axis. we need to rotate them somehow because we need them to be oriented alogn the y axis -->
        <origin xyz="0.0 0.175 0.0" rpy="-${pi/2} 0 0"/>
    <!-- rotation axis. we rotated the wheel, our origin is now z and we need our wheel to rotate around z axis, anticlockwise = positive, forward -->
        <axis xyz="0.0 0.0 1.0"/> 
    </joint>
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>
            Gazebo/Blue
        </material>
    </gazebo>

    <!-- Right Wheel Link > lengths are in meters! -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
    <!-- default cylinders are oriented in z axis. we need to rotate them somehow because we need them to be oriented alogn the y axis -->
        <origin xyz="0.0 -0.175 0.0" rpy="${pi/2} 0 0"/>
    <!-- rotation axis. we rotated the wheel, our origin is now z and we need our wheel to rotate around z axis, anticlockwise = positive, forward -->
        <axis xyz="0.0 0.0 -1.0"/> 
    <!-- we rotated the right wheel same way but opposite. So just change the values accordingly -->
    </joint>
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>
            Gazebo/Blue
        </material>
    </gazebo>

    <!-- Caster Wheel Link -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <!-- we need caster whell in the front of our robot -->
        <origin xyz="0.24 0.0 0.0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="black"/>        
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>        
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>
            Gazebo/Black
        </material>
        <!-- adding friction coefficient(katsayı). not mul, mu1 (one)!-->
        <mu1 value = "0.001"/>
        <mu2 value = "0.001"/>
    </gazebo>

</robot>